<view class="mag-container">
    <view class="recommend-title">
      <text class="title-date">{{recommend.date}}</text>
      <text class="title-contain">{{recommend.title}}</text>
    </view>
    <view class="pic">
        <image mode="widthFix" src="{{recommend.imgSrc}}" />
    </view>
    <view class="recommend-article">
        <text >+</text>
        <text bind:tap="gototype" data-typeid="{{item.typeId}}" wx:for='{{markType}}' wx:key=''>{{item.type}}</text>
        <!-- <text >男性穿搭</text>
