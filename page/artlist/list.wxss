@import '../../list-css/listcss.wxss';
.mag-container{
 display:flex;
 flex-direction: column;
 align-items: center;
 padding: 0 40rpx;
}
.recommend-title{
    display:flex;
    flex-direction:column;
    align-items: center;
}
.title-date{
    position:relative;
    font-size:50rpx;
    font-weight: 600;
    letter-spacing: 0.2em;
    padding:20rpx 0;

}
.title-date::after{
    content: '';
    position:absolute;
    bottom:0;
    left:50rpx;
    display:block;
    width: 150rpx;
    height:20rpx;
    border-bottom: 1px solid #ccc; 
}
.title-contain{
    margin-top:20rpx;
    line-height: 1.5em;
    text-align:center;
}
.pic image{
    margin:40rpx 0;
    width:700rpx;
}
