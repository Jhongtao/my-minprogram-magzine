.mag-container{
    display:flex;
    flex-direction: column;
    align-items: center;
    padding: 0 40rpx;
    background: rgb(245, 242, 242);
   }
.pic image{
    /* margin:40rpx 0; */
    width:960rpx;
    height: 500rpx;
}
.mag-title{
   width:600rpx;
   height: 200rpx;
   background: rgba(255,255,255,0.8);
   margin:auto;
   margin-top:-140rpx;
   display: flex;
   justify-content: space-between;
   align-items:center;
   border-radius:20rpx;
}
.mag-title image{
    width: 50rpx;
}
.mag-title text{
    font-size:50rpx;
    font-weight: 700;
}
.article-handle text{
    padding: 10rpx;
    line-height: 60rpx;
    border:none;
}
