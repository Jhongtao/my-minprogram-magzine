/* pages/index/index.wxss */
.container{
    padding:0 20rpx;
}
.nav{
    position: fixed;
    top:0;
    left:0;
    z-index: 100;
}
.recommend{
    display: block;
    position: relative;
    margin-top:100rpx;
}
.loading{
    position: fixed;
    width: 100%;
    height: 100%;
    top:0;
    left:0;
    /* z-index: 101; */
    background-color:rgba(255, 255, 255, .6);
}
.loaded{
    position: absolute;
    top:50%;
    left:50%;
    transform:translateX(-50%) translateY(-50%);

}