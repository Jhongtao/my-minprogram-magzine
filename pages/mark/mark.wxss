/* pages/mark/mark.wxss */
.container{
    background-color:#eee;
    padding:0 0 20rpx 0;
}
.user-info{
    box-sizing: border-box;
    display:flex;
    width: 750rpx;
    height: 120rpx;
    background-color:#fff;
    justify-content: space-between;
    align-items: center;
    padding:20rpx;
}
.img-user{
    display:block;
    width:70rpx;
    height:70rpx;
}
.image{
    width:70rpx;
    height:70rpx;
    border-radius:50%;
    margin-bottom: 20rpx;
}

.share{
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    background-color:#fff;
    display: flex;
    padding-left: 20rpx;
}
.share-icon{
    display: block;
    width:70rpx;
    height: 70rpx;
    overflow: hidden;
}
.img-share{
    width: 70rpx;
    height: 70rpx;
}