/* components/comVideo/com.wxss */
.container{
    display:flex;
    flex-direction: column;
    align-items: center;
    /* width: 700rpx;
    height:500rpx; */
    position: relative;
}
.container-video{
    width: 700rpx;
    height:400rpx;
    position: relative;
    top:0;

}
.container-video.show{
    z-index: 2;
}
.cover{
    width:700rpx;
    height: 400rpx;
    position: absolute;
    top:0;
}
.cover-img{
    width: 700rpx;
    height: 400rpx;
}
.image{
    width: 100%;
    height:100%;
}
.screen-cover{
    width:100%;
    height:100%;
    background-color:rgba(100,100,100,0.2);
    position: fixed;
    top:0rpx;
    left:0rpx;
}
.cover-play{
    position: absolute;
    width:90rpx;
    height:90rpx;
    top:50%;
    left:50%;
    margin-top:-45rpx;
    margin-left: -45rpx;
    background-color:rgba(100,100,100,0.6);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items:center;

}
.play-image{
    width: 50rpx;
    height: 50rpx;
    margin-top:10rpx;
}
.duration{
    font-size: 25rpx;
}
.main-title{
    margin-top:18rpx;
    font-size:35rpx;
    text-align: justify;
    text-indent:2em;
}